      <!-- Page Wrapper -->
     <div id="wrapper">

      <!-- Sidebar -->
      <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

          <!-- Sidebar - Brand -->
          <a class="sidebar-brand d-flex align-items-center justify-content-center" href="/">
              <div class="sidebar-brand-icon rotate-n-15">
                  <i class="fas fa-laugh-wink"></i>
              </div>
              <div class="sidebar-brand-text mx-3">Admin Presensi</div>
          </a>

          <!-- Divider -->
          <hr class="sidebar-divider my-0">

          <!-- Nav Item - Dashboard -->
          <li class="nav-item ">
              <a class="nav-link" href="/">
                  <i class="fas fa-fw fa-tachometer-alt"></i>
                  <span>Dashboard</span></a>
          </li>

          <!-- Divider -->
          <hr class="sidebar-divider my-0">

          <!-- Nav Item - Upload -->
          <li class="nav-item active">
              <a class="nav-link" href="/upload">
                  <i class="fas fa-fw fa-tachometer-alt"></i>
                  <span>Upload</span></a>
          </li>

          <!-- Divider -->
          <hr class="sidebar-divider my-0">

          <!-- Nav Item - Report -->
          <li class="nav-item ">
              <a class="nav-link" href="index.html">
                  <i class="fas fa-fw fa-tachometer-alt"></i>
                  <span>Report</span></a>
          </li>

          <!-- Divider -->
          <hr class="sidebar-divider">

      </ul>
      <!-- End of Sidebar -->

      
      

      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">

          <!-- Main Content -->
          <div id="content">

              <!-- Begin Page Content -->
              <div class="container-fluid">

                  <!-- Page Heading -->
                  <div class="d-sm-flex align-items-center justify-content-between mb-4">
                      <h1 class="h3 mb-0 text-gray-800">Update</h1>
                  </div>

                  <!-- Photo Upload -->
                  <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Photo Upload</h6>
                    </div>
                    <div class="card-body">
                      <form action="/upload-user" method="POST" enctype="multipart/form-data">
                        <input type="file" name="image" accept="image/*">
                        <br>
                        <input type="text" name="userId" placeholder="Enter user id here">
                        <input type="text" name="userName" placeholder="Enter user name here">
                        <button type="submit" class="btn btn-success">Upload</button>
                    </form>
                    </div>
                </div>

            
                  <!-- Master Data -->
                  <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Master Data</h6>
                    </div>
                    <div class="card-body">
                      <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                          <tr>
                            <th>Photo</th>
                            <th>User Id</th>
                            <th>User Name</th>
                            <th>Action</th>
                          </tr>
                  
                          <% for (let i = 0; i < listPathRef.length; i++) { %>
                              <tr>
                                  <td><img src= <%= listPhotoUrl[i] %> alt="Master Data" width="200" height="200"></td>
                                  <td><%= listPhotoId[i].split('.')[0] %></td>
                                  <td><%= listUserName[i] %></td>
                                  <td>
                                    <form action="/delete-user" method="POST">
                                      <input type="hidden" name="userId" value="<%= listPhotoId[i] %>">
                                      <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                    <br>
                                    <form action="/update" method="GET">
                                      <input type="hidden" name="photoUrl" value="<%= listPhotoUrl[i] %>">
                                      <input type="hidden" name="userId" value="<%= listPhotoId[i] %>">
                                      <input type="hidden" name="userName" value="<%= listUserName[i] %>">
                                      <button type="submit" class="btn btn-warning">Update</button>
                                    </form>
                                  </td>
                              </tr>
                          <% }; %>
                        </table>
                      </div>
                      
                    </div>
                </div>

              </div>
              <!-- /.container-fluid -->

          </div>
          <!-- End of Main Content -->

          <!-- Footer -->
          <footer class="sticky-footer bg-white">
              <div class="container my-auto">
                  <div class="copyright text-center my-auto">
                      <span>Copyright &copy; Your Website 2024</span>
                  </div>
              </div>
          </footer>
          <!-- End of Footer -->

      </div>
      <!-- End of Content Wrapper -->

